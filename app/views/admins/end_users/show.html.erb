<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3 ">
			<div class="title">
				<h2>会員詳細画面</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-1">
			<table class="table">
				<tbody>
					<tr>
						<th>顧客ID</th>
						<td><%= @end_user.id %></td>
						<td class="info"><%= @end_user.is_deleted %></td>
					</tr>
					<tr>
						<th>氏名</th>
						<td><%= @end_user.first_name %></td>
						<td><%= @end_user.last_name %></td>
					</tr>
					<tr>
						<th>フリガナ</th>
						<td><%= @end_user.first_kana_name %></td>
						<td><%= @end_user.last_kana_name %></td>
					</tr>
					<tr>
						<th>郵便番号</th>
						<td><%= @end_user.postcode %></td>
					</tr>
					<tr>
						<th>住所</th>
						<td><%= @end_user.address %></td>
					</tr>
					<tr>
						<th>電話番号</th>
						<td><%= @end_user.phone_number %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @end_user.email %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-4 col-xs-offset-1">
			<%= link_to "編集する", edit_admins_end_user_path(@end_user), class: "btn btn-primary" %>
			<%= link_to "注文履歴一覧を見る", admins_orders_path, class: "btn btn-primary" %>
		</div>
	</div>
</div>