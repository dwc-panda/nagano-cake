<div class="container">
	<div class="row">
		<div class="col-xs-4 col-xs-offset-1">
			<div class="title">
				<h2>ジャンル編集画面</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<%= form_for [:admins, @genre] do |f| %>
			<%= render 'layouts/error_messages', model: f.object %>

			<div class="field">
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>

				<%= f.label :is_valid, "販売中" %>
				<%= f.radio_button :is_valid, "販売中", class: "edit-control" %>
				<%= f.label :is_valid, "売切れ" %>
				<%= f.radio_button :is_valid, "売切れ", class: "edit-control" %>

				<%= f.submit "変更を保存する" , class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>
	<% end %>
