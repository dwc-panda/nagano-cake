<div class="container">
  <div class="row">
  	<div class="col">
	  <h1>ジャンル編集画面</h1>
	  <%= form_for [:admins, @genre] do |f| %>
	  <%= render 'layouts/error_messages', model: f.object %>

	  	 <div class="field">
	      <%= f.label :ジャンル %>
	      <%= f.text_field :name %>

		  <%= f.label :is_valid, "有効" %>
		  <%= f.radio_button :is_valid, "有効", class: "edit-control" %>
		  <%= f.label :is_valid, "無効" %>
		  <%= f.radio_button :is_valid, "無効", class: "edit-control" %>

		  <%= f.submit "変更を保存する" %>
		</div>
	  <% end %>
