<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="container">
  <div class="row">
  	<div class="col">
	  <h1>ジャンル追加・一覧画面</h1>
	  <%= form_for [:admins, @genre] do |f| %>
	  <%= render 'layouts/error_messages', model: f.object %>
	  	<div class="field">
	      <%= f.label :ジャンル %>
	      <%= f.text_field :name %>
			  <%= f.label :is_valid, "有効" %>
			  <%= f.radio_button :is_valid, "有効" %>
			  <%= f.label :is_valid, "無効" %>
			  <%= f.radio_button :is_valid, "無効" %>
			  <%= f.submit "追加" %>
			</div>
	  <% end %>
	  <table class="table">
	  	<thead>
	  	  <tr>
	  	  	<th>ジャンル</th>
	  	  	<th>状態</th>
	  	  	<th></th>
	  	  </tr>
	  	</thead>
	  	<tbody>
	  	<% @genres.each do |genre| %>
	  	  <tr>
	  	  	<td><%= genre.name %></td>
	  	  	<td><%= genre.is_valid %></td>
	  	  	<td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
	  	  </tr>
	  	<% end %>
	  </tbody>
	</table>
    </div>
  </div>
</div>