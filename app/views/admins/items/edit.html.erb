<div class="container">
	<div class="row">
		<div class="col-xs-5 col-xs-offset-1">
			<div class="title">
				<h2>商品編集画面</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-3 col-xs-offset-1">
			<%= form_for [:admins, @item] do |f| %>
			<%= render 'layouts/error_messages', model: f.object %>

			<div class="field">
				<%= attachment_image_tag(@item, :image, size: "200x200", fallback: "no_image.png") %>
				<%= f.attachment_field :image %>
			</div>
		</div>
		<div class="col-xs-5">
			<div class="row">
				<div class="col-xs-4 ">
					<%= f.label :商品名 %>
				</div>
				<div class="col-xs-6">
					<%= f.text_field :name %>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-4 ">
					<%= f.label :商品説明 %>
				</div>
				<div class="col-xs-4">
					<%= f.text_area :detail %>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-4 ">
					<%= f.label :ジャンル %>
				</div>
				<div class="col-xs-6">
					<%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
				</div>
			</div>


			<div class="row">
				<div class="col-xs-4 ">
					<%= f.label :税抜価格 %>
				</div>
				<div class="col-xs-7">
					<%= f.text_field :non_taxed_price %> 円
				</div>
			</div>

			<div class="row">
				<div class="col-xs-4 ">
					<%= f.label :販売ステータス %>
				</div>
				<div class="col-xs-6">
					<%= f.select :is_valid, [["販売中","有効"],["売切れ","無効"]] %>
				</div>
			</div>

		</div>
	</div>
	<div class="row">
		<div class="col-xs-3 col-xs-offset-7">
			<%= f.submit "変更を保存", class: "btn btn-primary"  %>
		</div>
		<% end %>
	</div>
</div>





