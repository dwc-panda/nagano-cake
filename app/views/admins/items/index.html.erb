<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col">
	  <h1>商品一覧画面</h1>
	  <%= link_to "追加", new_admins_item_path, class: "pull-right" %>
	  <table class="table">
	  	<thead>
	  		<tr>
	  			<th>商品ID</th>
	  			<th>商品名</th>
	  			<th>税込価格</th>
	  			<th>ジャンル</th>
	  			<th>ステータス</th>
	  		</tr>
	  	</thead>
	  	<tbody>
	  		<% @items.each do |item| %>
	  		  <tr>
	  			<td><%= item.id %></td>
	  			<td><%= item.name %></td>
	  			<td><%= item.non_taxed_price %></td>
	  			<td><%= item.genre_id %></td>
	  			<td><%= item.is_valid %></td>
	  		  </tr>
	  		<% end %>
	  	</tbody>
	  </table>
	</div>
  </div>
</div>


