<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-5 col-xs-offset-1">
			<div class="title">
				<h2>商品詳細画面</h2>
			</div>

		</div>
	</div>

	<div class="row">
		<div class="col-xs-2 col-xs-offset-1">
			<%= attachment_image_tag(@item, :image, size: "200x200", fallback: "home-baked-cake.jpg") %>
		</div>
		<div class="col-xs-8 col-xs-offset-1">
			<div class="row">
				<div class="col-xs-2 ">
					<div>商品名</div>
				</div>
				<div class="col-xs-6">
					<%= @item.name %>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-2 ">
					<div>商品説明</div>
				</div>
				<div class="col-xs-6">
					<%= @item.detail %>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-2 ">
					<div>ジャンル</div>
				</div>
				<div class="col-xs-6">
					<%= @item.genre.name %>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-3 ">
					<div>税込価格(税抜価格)</div>
				</div>
				<div class="col-xs-6">
					¥<%= ((@item.non_taxed_price)*1.1).floor.to_s(:delimited) %>(¥<%= @item.non_taxed_price.floor.to_s(:delimited) %>)
				</div>
			</div>
			<div class="row">
				<div class="col-xs-3 ">
					<h5>販売ステータス</h5>
				</div>
				<div class="col-xs-6">
					<%= @item.is_valid %>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-3 col-xs-offset-7">
			<%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-primary" %>
		</div>
	</div>
</div>








