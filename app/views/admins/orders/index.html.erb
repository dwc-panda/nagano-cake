<div class="container">
	<div class="row">
		<div class="col-xs-4 col-xs-offset-1">
			<div class="title">
				<h2>管理者側注文一覧画面</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<table class="table">
				<thead>
					<tr class="active">
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td>
							<%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"),admins_order_path(order) %>
						</td>
						<td>
							<%= order.end_user.first_name + order.end_user.last_name %>
						</td>
						<% @sum = 0 %>
						<% order.order_details.each do |order_detail| %>
						<% @sum += order_detail.quantity %>
						<% end %>
						<td><%= @sum %></td>
						<td>
							<%= order.order_status %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
