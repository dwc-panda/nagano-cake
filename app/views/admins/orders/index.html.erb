<div class="container">
	<div class ="row">
		<div class= "col">
			<h4>管理者側注文商品一覧画面</h4>
			<table class="table">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td>
							<%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"),admins_order_path(order) %>
						</td>
						<td>
							<%= order.end_user.first_name + order.end_user.last_name %>
						</td>
							<% @sum = 0 %>
							<% order.order_details.each do |order_detail| %>
							<% @sum += order_detail.quantity %>
							<% end %>
						<td><%= @sum %></td>
						<td>
							<%= order.order_status %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
