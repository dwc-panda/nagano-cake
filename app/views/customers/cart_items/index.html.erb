<div class="container">
	<div class="row">
		<div class="col-xs-3 col-xs-offset-1">
			<div class="title">

				<h3>ショッピングカート</h3>

			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-2 col-xs-offset-8">
			<%= link_to "カートを空にする", empty_path, class:"btn btn-danger pull-right",method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<table class="table">

				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込み）</th>
						<th>数量</th>
						<th>小計</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @price = 0 %>
					<% @cart_items.each do |cart_item| %>
					  <%= form_for(cart_item) do |f| %>
					  <%= render 'layouts/error_messages', model: f.object %>
						<tr>
							<td><%= attachment_image_tag(cart_item.item, :image, size: "50x50") %>
								  <%= cart_item.item.name %>
							</td>
							<td><%= (cart_item.item.non_taxed_price*1.1).floor.to_s(:delimited) %></td>
							<td><%= f.select :quantity, ((1..10).to_a) %>
								  <%= f.submit "更新" %>
							</td>
							<td><%= (cart_item.item.non_taxed_price*cart_item.quantity*1.1).floor.to_s(:delimited) %></td>
							<td><%= link_to "削除", cart_item_path(cart_item),class:"btn btn-danger", method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
							</td>
						</tr>
						<% @price += cart_item.item.non_taxed_price*cart_item.quantity*1.1%>
					  <% end %>
					<% end %>
				</tbody>

			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-2 col-xs-offset-1">
			<%= link_to "買い物を続ける", items_path, class: "btn btn-primary btn-block" %>
		</div>
		<div class="col-xs-8 .col-xs-offset-1" align="right">
		<table border="1">
		  <tr>
		  	<td>
			<h4>合計金額</h4>
			</td>
			<td>
			<%= @price.floor.to_s(:delimited) %>
			</td>
		  </tr>
		</table>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-2 col-xs-offset-5">
			<%= link_to "情報入力に進む"	, new_order_path,  class: "btn btn-success btn-block" %>
		</div>
	</div>
</div>
