<div class="container">
  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <div class="sign-title">

				<h1>配送先編集</h1>

				<%= form_for (@delivery) do |f| %><!-- divの中に移動 -->
				<%= render 'layouts/error_messages', model: f.object %>

			</div>
		</div>
	</div>



  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<p><label>郵便番号(ハイフンなし)</label></p>
    </div>
    <div class="col-xs-4">
      <div class="sign-field">
				<%= f.text_field :postcode %>
			</div>
		</div>
	</div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<p><label>住所</label></p>
    </div>
    <div class="col-xs-4">
      <div class="sign-field">
				<%= f.text_field :address %>
			</div>
		</div>
	</div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<p><label>宛名</label></p>
    </div>
    <div class="col-xs-3">
      <div class="sign-field">
				<%= f.text_field :direction %>
			</div>
		</div>

		<div class="col-xs-1">
	<%= f.submit '編集する', class: "btn btn-primary btn-block" %>
<% end %>

		</div>
	</div>
</div>