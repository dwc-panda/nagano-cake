<div class="container">

	<%= form_for(@delivery) do |f| %>
<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

	<div class="row">
		<div class="col-xs-3 col-xs-offset-1">
			<div class="sign-title">

				<h2>配送先登録/一覧</h2>

			</div>
		</div>
	</div>

<%= form_for(@delivery) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<p><label>郵便番号(ハイフンなし)</label></p>
    </div>
    <div class="col-xs-4">
      <div class="sign-field">
					<%= f.text_field :postcode %>
			</div>
		</div>
	</div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<p><label>住所</label></p>
    </div>
    <div class="col-xs-4">
      <div class="sign-field">
				<%= f.text_field :address %>
			</div>
		</div>
	</div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<p><label>宛名</label></p>
    </div>
    <div class="col-xs-3">
      <div class="sign-field">
				<%= f.text_field :direction %>
			</div>
		</div>

		<div class="col-xs-1">
			 <%= f.submit '登録する', class: "btn btn-success btn-block" %>
		</div>

	</div>
<% end %>

	<div class="row">
		<div class="col-xs-9 col-xs-offset-1">
				<table class="table table-striped">

					<thead>
						<tr>
							<th>郵便番号</th>
							<th>住所</th>
							<th>宛名</th>
							<th></th>
							<th colspan="4"></th>
						</tr>
					</thead>
					<tbody>
						<% @deliveries.each do |delivery| %>
						<tr>
							<td><%= delivery.postcode %></td>
							<td><%= delivery.address %></td>
							<td><%= delivery.direction %></td>
							<td>
								<%= link_to '編集する', edit_delivery_path(delivery) %>
								<%= link_to '削除する', delivery_path(delivery), method: :delete %>
							</td>
						</tr>
						<% end %>
					</tbody>

				</table>
		</div>
	</div>
</div>
