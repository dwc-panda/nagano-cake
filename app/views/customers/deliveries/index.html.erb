<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>


<h1>配送先登録/一覧</h1>

<%= form_for(@delivery) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

	<h4>郵便番号(ハイフンなし)</h4>
	<%= f.text_field :postcode %>

	<h4>住所</h4>
	<%= f.text_field :address %>

	<h4>宛名</h4>
	<%= f.text_field :direction %>

	<%= f.submit '登録する' %>
<% end %>


<table class="table table-striped">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
			<th colspan="4"></th>
		</tr>
	</thead>
	<tbody>
		<% @deliveries.each do |delivery| %>
		<tr>
			<td><%= delivery.postcode %></td>
			<td><%= delivery.address %></td>
			<td><%= delivery.direction %></td>
			<td>
				<%= link_to '編集する', edit_delivery_path(delivery) %>
				<%= link_to '削除する', delivery_path(delivery), method: :delete %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>