<h1>登録情報編集</h1>

<%= form_with model: @end_user, url: end_user_path(@end_user), local: true, method: :patch do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
	<table>
		<thead>
			<tr>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
				<tr>
					<td><%= f.label :name, "名前" %></td>
					<td>(姓)<%= f.text_field :first_name %></td>
					<td>(名)<%= f.text_field :last_name %></td>
				</tr>
				<tr>
					<td><%= f.label :name, "フリガナ" %></td>
					<td>(セイ)<%= f.text_field :first_kana_name %></td>
					<td>(メイ)<%= f.text_field :last_kana_name %></td>
				</tr>
				<tr>
					<td><%= f.label :email, "メールアドレス" %></td>
					<td><%= f.email_field :email %></td>
				</tr>
				<tr>
					<td><%= f.label :postcode, "郵便番号(ハイフンなし)" %></td>
					<td><%= f.text_field :postcode %></td>
				</tr>
				<tr>
					<td><%= f.label :address, "住所" %></td>
					<td><%= f.text_field :address %></td>
				</tr>
				<tr>
					<td><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
					<td><%= f.text_field :phone_number %></td>
				</tr>
				<tr>
					<td><%= f.submit "編集内容を保存する" %></td>
				</tr>
		</tbody>
	</table>
<% end %>

<%= link_to "退会する", end_user_confirm_path(@end_user),class: "btn btn-danger" %>