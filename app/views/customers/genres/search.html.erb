<div class="container">
	<div class ="row">
		<div class= "col-xs-3 col-xs-offset-1">
			<div class="title">
				<h2>商品一覧</h2>
				<label>(全 <%= @items.count %> 件)</label>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2 col-xs-offset-2">
			<table>
				<tbody>

					<% @items.each do |item| %>
					<td>
						<div class="topbox">
							<%= link_to item_path(item) do %>
							<%= attachment_image_tag(item, :image, size: "200x200") %>
							<% end %>
						</div><br>
						<%= link_to item_path(item) do %>
						<div class="name">
							商品名:
							<%= item.name %><br>
							¥
							<%= item.non_taxed_price %>
						</div><br>
					</td>
					<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

