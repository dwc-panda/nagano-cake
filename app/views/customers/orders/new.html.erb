<div class="container">
  <div class="row">
  	<h2>注文情報入力</h2>
  		<%= form_with model: @order, url: order_confirm_path, local: true do |f| %>

  			<h4>お支払い方法</h4>

  			<%= f.label :クレジットカード %>
  			<%= f.radio_button :payment_type, :クレジットカード %>

  			<%= f.label :銀行振り込み %>
  			<%= f.radio_button :payment_type, :銀行振り込み %>

  			<h4>お届け先</h4>

  			<%= f.label :ご自身の住所 %>
  			<%= f.radio_button :select_address, 1 %><br>

  			<%= f.label :登録済み住所から選択 %>
  			<%= f.radio_button :select_address, 2 %>
  			<%= f.collection_select(:address_id, current_end_user.deliveries, :id, :address ) %><br>

  			<%= f.label :新しいお届け先 %>
  			<%= f.radio_button :select_address, 3 %><br>

  			<%= f.label :郵便番号ハイフンなし %>
  			<%= f.text_field :postcode %><br>

  			<%= f.label :住所 %>
  			<%= f.text_field :address %><br>

  			<%= f.label :宛名 %>
  			<%= f.text_field :direction %><br>

  			<%= f.submit '確認画面へ進む' %>

  		<% end %>

  </div>
</div>


