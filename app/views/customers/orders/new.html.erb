<div class="container">
  <div class="row">
  	<h2>注文情報入力</h2>
  		<%= form_with model: @order, url: confirm_path do |f| %>

  			<h4>お支払い方法</h4>

  			<%= f.label :クレジットカード %>
  			<%= f.radio_button :payment_type, :payment_type[0] %>

  			<%= f.label :銀行振り込み %>
  			<%= f.radio_button :payment_type, :payment_type[1] %>

  			<h4>お届け先</h4>

  			<%= f.label :ご自身の住所 %>
  			<%= f.radio_button :address %>

  		<% end %>

  </div>
</div>


