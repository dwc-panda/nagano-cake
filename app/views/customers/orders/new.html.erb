<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
      <div class="title">
      	<h2>注文情報入力</h2>
      </div>
    </div>
  </div>

  <%= form_with model: @order, url: order_confirm_path, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
			<h4>お支払い方法</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
			<%= f.radio_button :payment_type, :クレジットカード, :checked => true %>
      <%= f.label :クレジットカード %><br>

			<%= f.radio_button :payment_type, :銀行振り込み %>
      <%= f.label :銀行振り込み %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
			<h4>お届け先</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">

			<%= f.radio_button :select_address, 1, :checked => true %>
      <%= f.label :ご自身の住所 %><br>

			<%= f.radio_button :select_address, 2 %>
      <%= f.label :登録済み住所から選択 %><br>
			<%= f.collection_select(:address_id, current_end_user.deliveries, :id, :address ) %><br>

			<%= f.radio_button :select_address, 3 %>
      <%= f.label :新しいお届け先 %><br>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<%= f.label :郵便番号ハイフンなし %>
    </div>
    <div class="col-xs-8 col-xs-offset-1">
      <div class="sign-field">
			<%= f.text_field :postcode %>
    </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<%= f.label :住所 %>
    </div>
    <div class="col-xs-8 col-xs-offset-1">
      <div class="sign-field">
			<%= f.text_field :address %>
    </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
			<%= f.label :宛名 %>
    </div>
    <div class="col-xs-8 col-xs-offset-1">
      <div class="sign-field">
			<%= f.text_field :direction %>
    </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 col-xs-offset-3">
			<%= f.submit '確認画面へ進む', class: "btn btn-primary btn-block" %>
    </div>
  </div>

  <% end %>
</div>