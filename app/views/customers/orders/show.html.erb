<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-1">
      <div class="sign-title">

				<h2>注文履歴詳細</h2>
			</div>
		</div>
	</div>
 	<div class="row">
		<div class="col-xs-6 col-xs-offset-1">
			<h4>注文情報</h4>
			<table class="table">
				<thead>
					<tr>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>注文日</td>
						<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
					</tr>
					<tr>
						<td>配送先</td>
						<td>〒 <%= @order.postcode %>
								<%= @order.address %><br>
								<%= @order.direction %>
						</td>
					</tr>
					<tr>
						<td>支払い方法</td>
						<td><%= @order.payment_type %></td>
					</tr>
					<tr>
						<td>ステータス</td>
						<td><%= @order.order_status %></td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-xs-3 col-xs-offset-1">
			<h4>請求情報</h4>
			<table class="table">
					<tr>
						<td>商品合計</td> <!--taxの追加 -->
						<td><%= (@order.total_price * @order.tax).floor.to_s(:delimited) %></td>
					</tr>
					<tr>
						<td>配送料</td>
						<td><%= @order.postage %></td>
					</tr>
					<tr>
						<td><strong>ご請求額</strong></td><!--送料も*tax1.1されていたので入れ替えました -->
						<td><%= ((@order.total_price * @order.tax) + @order.postage ).floor.to_s(:delimited) %></td>
					</tr>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6 col-xs-offset-1">
			<h4>注文内容</h4>
			<table class="table">
				<thead>
					<tr>
						<th>商品</th>
						<th>単価（税込）</th>
						<th>個数</th>
						<th>小計</th>
						<th colspan="4"></th>
					</tr>
				</thead>
				<tbody>
					<% @order.order_details.each do |order_detail| %>
						<tr>
							<td><%= order_detail.item.name %></td>
							<td><%= (order_detail.price * @order.tax).floor.to_s(:delimited) %></td>
							<td><%= order_detail.quantity %></td>
							<td><%= (order_detail.quantity * order_detail.price * @order.tax).floor.to_s(:delimited) %></td><!--taxの追加 -->
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>