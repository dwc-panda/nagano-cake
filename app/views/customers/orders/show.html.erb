<h1>注文履歴詳細</h1>
<div class="row">
	<div class="col-md-5"><h2>注文情報</h2></div>
		<table>
			<tr>
				<td>注文日</td>
				<td><%= current_order.created_at.strftime('%Y/%m/%d') %></td>
			</tr>
			<tr>
				<td>配送先</td>
				<td><%= current_order.address %></td>
			</tr>
			<tr>
				<td>支払い方法</td>
				<td><%= current_order.payment_type %></td>
			</tr>
			<tr>
				<td>ステータス</td>
				<td><%= current_order.order_status %></td>
			</tr>
		</table>
	<div class="col-md-5"><h2>請求情報</h2></div>
		<table>
			<tr>
				<td>商品合計</td>
				<td><%= @price_sum %></td>
			</tr>
			<tr>
				<td>配送料</td>
				<td><%= current_order.postage %></td>
			</tr>
			<tr>
				<td><strong>ご請求額</strong></td>
				<td><%= current_order.total_price %></td>
			</tr>
		</table>
</div>
<div class="row">
	<h2>注文内容</h2>
		<table>
			<tr>
				<td>商品</td>
				<td>単価（税込）</td>
				<td>個数</td>
				<td>小計</td>
			</tr>
			<% @orders.each do |order| %>
			<tr>
				<td><%= order.order_id %></td>
				<td><%= order.price %></td>
				<td><%= order.quantity %></td>
				<td><%= order.quantity * order.price %></td>
			</tr>
			<% end %>
		</table>
</div>
