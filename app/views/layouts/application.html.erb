<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar">
        <div class="container">
          <div class="navbar-header">
          <%= link_to root_path do %><h3>LOGO</h3><% end %>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <% if admins_user_signed_in? %>
              <li><%= link_to '商品一覧', admins_items_path %></li>
              <li><%= link_to '会員一覧', admins_end_users_path %></li>
              <li><%= link_to '注文履歴', admins_orders_path %></li>
              <li><%= link_to 'ジャンル管理', admins_genres_path %></li>
              <li><%= link_to 'ログアウト', destroy_admins_user_session_path, method: :delete %></li>
            <% elsif end_user_signed_in? %>
              <li>ようこそ、<%= current_end_user.first_name %> <%= current_end_user.last_name %>さん！</li>
              <li><%= link_to 'マイページ', end_user_path(current_end_user) %></li>
              <li><%= link_to 'アバウトページ', about_path %></li>
              <li><%= link_to '商品一覧', items_path %></li>
              <li><%= link_to 'カート', cart_items_path %></li>
              <li><%= link_to 'ログアウト', destroy_end_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to 'アバウトページ', about_path %></li>
              <li><%= link_to '商品一覧', items_path %></li>
              <li><%= link_to '新規登録', new_end_user_registration_path %></li>
              <li><%= link_to 'ログイン', new_end_user_session_path %></li>
            <% end %>
          </ul>
         </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
